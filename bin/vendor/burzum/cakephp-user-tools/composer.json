{
	"name": "burzum/cakephp-user-tools",
	"type": "cakephp-plugin",
	"description": "This plugin is a set of tools for user handling like registration, login, email verification, password reset and much more.",
	"keywords": ["users", "user-management", "login", "registration", "signup"],
	"homepage": "http://github.com/burzum/cakephp-user-tools",
	"license": "MIT",
	"authors": [
		{
			"name": "Florian KrÃ¤mer",
			"role":"Author",
			"homepage": "http://florian-kraemer.net"
		}
	],
	"require": {
		"php": ">=5.4.16",
		"cakephp/plugin-installer": "*",
		"cakephp/cakephp": "3.*"
	},
	"require-dev": {
		"phpunit/phpunit": "*"
	},
	"suggested": {
		"cakephp/migration": "*",
		"friendsofcake/authenticate": "Authentication adapter collection",
		"admad/cakephp-jwt-auth": "JWT Auth adapter",
		"burzum/cakephp-simple-rbac": "An easy to use role based authorization adapter"
	},
	"autoload": {
		"psr-4": {
			"Burzum\\UserTools\\": "src",
			"Burzum\\UserTools\\Test\\Fixture\\": "tests\\Fixture"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"TestApp\\": "tests/test_app/TestApp",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests",
			"Burzum\\UserTools\\Test\\": "tests"
		}
	}
}
